# NOTE that this is run after ~/.zshenv, and only for interactive shells
# Put together all these files
. ~/.dotfiles/zsh/paths
. ~/.dotfiles/zsh/misc
. ~/.dotfiles/zsh/colors
. ~/.dotfiles/zsh/history
. ~/.dotfiles/zsh/bindings
. ~/.dotfiles/zsh/prompt
. ~/.dotfiles/zsh/lion
. ~/.dotfiles/zsh/chruby

# use .zshrc_machine_specific for settings specific to one machine
[[ -f ~/.zshrc_machine_specific ]] && .  ~/.zshrc_machine_specific

# So that that shelling out from Vim with `zsh -i` will load .zshrc
# (see `man zsh` and search for ZDOTDIR)
export ZDOTDIR=$HOME

export PATH="$HOME/.dotfiles/zsh/scripts:$PATH"
